<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
      
    <% end %>
    <%= link_to "Create Summary", topic_post_summary_path(@topic, @post,@summary,@summary) %>
 
    <%= link_to "Show Summary",[@topic, @post, @post.summary] %>
  </div>
</div>